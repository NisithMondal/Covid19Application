<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/thumbnail_text_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_disk1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:paddingTop="18dp"
            android:textSize="25sp"
            android:text="W"
            android:textStyle="normal"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/state_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="West Bengal"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:layout_toEndOf="@+id/thumbnail_text_view"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/total_cases_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cases:  54534"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@+id/thumbnail_text_view"
            android:layout_below="@+id/state_name_text_view"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            />


        <TextView
            android:id="@+id/total_deaths_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Deaths:  54534"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@+id/thumbnail_text_view"
            android:layout_below="@+id/total_cases_text_view"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="8dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>