<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/flag_image_thumbnail"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="7dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/country_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INDIA"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:layout_toEndOf="@+id/flag_image_thumbnail"
            android:layout_marginTop="15dp"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/total_cases_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cases  54534"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@+id/flag_image_thumbnail"
            android:layout_below="@+id/country_name_text_view"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            />


        <TextView
            android:id="@+id/total_death_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Deaths  54534"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@+id/flag_image_thumbnail"
            android:layout_below="@+id/total_cases_text_view"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"

            android:layout_marginEnd="8dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>